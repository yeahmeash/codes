#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cin >> n; // Input the number of integers
    vector<int> arr(n); // Create a vector to store the integers

    // Input the integers into the vector
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int count = 0; // Initialize a count to keep track of valid pairs

    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if ((arr[i] + arr[j]) % 3 == 0) {
                // If the sum of arr[i] and arr[j] is divisible by 3,
                // increment the count
                count++;
            }
        }
    }

    cout << count << endl; // Output the count of valid pairs
    return 0;
}
